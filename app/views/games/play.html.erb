<% #game_text = Mastermind:: GameText.new %>
<h1>Welcome to Mastermind</h1>
    <p>
      <% if @display_text %>
          <ul id="messages">
             <% @display_text.each do |message| %>
             <li><% JSON.parse(message).join.each_char do |letter|%>
                  
                  <div class="color_box <%=letter%>" style="display: inline-block;">&nbsp;</div>    
                 <% end %> </li> 
              <% end %>
          <li><%= @result %></li>
          </ul>
             <br><%= link_to "Next Guess", '#' , class: "btn btn-large btn-primary" %></br>
      <% end %>
    </p>

